
<h1>Paul T.'s Blog of Wonder</h1>

<table>
  <thead>

    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>

  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.subject %></td>
        <td><%= post.body %></td>
        <td><%= post.published_at %></td>
        <td><%= link_to 'Show', post, :id => "other_stuff" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :id => "other_stuff" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :id => "other_stuff" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="CNP">
<p><%= link_to 'Create New Post', new_post_path %></p>
</div>

<%= form_tag(posts_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
          of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>
